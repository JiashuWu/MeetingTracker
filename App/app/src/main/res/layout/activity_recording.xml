<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:waveview="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_recording_grand_relativelayout"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            android:layout_marginBottom="36dp"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:layout_above="@id/activity_recording_timer_chronometer">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meeting Topic"
                android:textColor="@color/colorBlack"
                android:textSize="36sp"
                android:id="@+id/activity_recording_meeting_topic_textview"
                android:layout_centerHorizontal="true" />

        </ScrollView>

        <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/activity_recording_timer_chronometer"
            android:textSize="36sp"
            android:textColor="@color/colorBlack" />

        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/ic_play_blue"
            android:id="@+id/activity_recording_control_imageview"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_recording_finish_button"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:visibility="gone"
            android:text="Processing"
            android:textAllCaps="false"
            app:strokeColor="#000000"
            android:textColor="#000000"
            app:backgroundTint="@android:color/transparent"
            app:cornerRadius="4dp"
            app:rippleColor="@android:color/transparent"
            app:strokeWidth="1dp"
            style="?android:attr/borderlessButtonStyle"
            />

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_recording_darkmode_chip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="26dp"
            app:chipIcon="@drawable/ic_night"
            app:chipStrokeColor="#000000"
            app:chipStrokeWidth="1dp"
            app:chipBackgroundColor="@android:color/transparent"
            android:text="Dark Mode" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
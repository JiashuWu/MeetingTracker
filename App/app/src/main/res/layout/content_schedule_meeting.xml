<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:waveview="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Title Textview -->
            <TextView
                android:id="@+id/activity_schedule_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule Meeting"
                android:textColor="#000000"
                android:textSize="36sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_schedule_attendee_textview"
                android:text="Attendee"
                android:layout_marginStart="@dimen/textview_left_margin"
                android:layout_marginEnd="@dimen/textview_right_margin"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@id/activity_schedule_title_textview"/>

            <!-- Attendee ChipGroup -->
            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activity_schedule_attendee_chipgroup"
                android:visibility="gone"
                android:layout_below="@id/activity_schedule_attendee_textview"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:layout_marginBottom="19dp"/>

            <!-- Attendee's Email Addresses-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activity_schedule_person_relativelayout"
                android:layout_below="@id/activity_schedule_attendee_chipgroup"
                android:layout_marginStart="@dimen/layout_left_margin"
                android:layout_marginEnd="@dimen/layout_right_margin"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <!-- Attendee Email Account Text Input Layout -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/activity_schedule_email_textinputlayout"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:hint="Attendee Email"
                    android:layout_toStartOf="@id/activity_schedule_addperson_imageview"
                    android:layout_marginEnd="10dp"
                    app:errorEnabled="true"
                    app:hintEnabled="true"
                    app:helperTextEnabled="true"
                    app:helperText="Please fill in attendee email address"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/activity_schedule_email_edittext"
                        android:drawableLeft="@drawable/ic_email"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:drawablePadding="5dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:layout_width="39dp"
                    android:layout_height="50dp"
                    android:id="@+id/activity_schedule_addperson_imageview"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/personadd" />

            </RelativeLayout>

            <!-- Meeting Topic Text Input Layout -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/activity_schedule_topic_textinputlayout"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/edittext_left_margin"
                android:layout_marginEnd="@dimen/edittext_right_margin"
                android:layout_marginTop="@dimen/edittext_top_margin"
                android:layout_below="@id/activity_schedule_person_relativelayout"
                android:hint="Meeting Topic"
                app:errorEnabled="true"
                app:hintEnabled="true"
                app:helperTextEnabled="true"
                app:helperText="Please enter the meeting topic"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/activity_schedule_topic_edittext"
                    android:drawableLeft="@drawable/ic_topic"
                    android:drawablePadding="5dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Notes Text Input Layout -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/activity_schedule_notes_textinputlayout"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/edittext_left_margin"
                android:layout_marginEnd="@dimen/edittext_right_margin"
                android:layout_marginTop="@dimen/edittext_top_margin"
                android:layout_below="@id/activity_schedule_topic_textinputlayout"
                android:hint="Notes (Optional)"
                app:errorEnabled="true"
                app:hintEnabled="true"
                app:helperTextEnabled="true"
                app:helperText="Please fill in your notes"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/activity_schedule_notes_edittext"
                    android:drawableLeft="@drawable/ic_notes"
                    android:drawablePadding="5dp" />

            </com.google.android.material.textfield.TextInputLayout>


            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/activity_schedule_datetime_button_linearlayout"
                android:layout_below="@id/activity_schedule_notes_textinputlayout" >

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/button_left_margin"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="@dimen/button_top_margin"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:id="@+id/activity_schedule_date_button"
                    android:text="Meeting Date"
                    app:strokeColor="#000000"
                    android:textColor="#000000"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="4dp"
                    app:rippleColor="@android:color/transparent"
                    app:strokeWidth="1dp"
                    style="?android:attr/borderlessButtonStyle"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="@dimen/button_right_margin"
                    android:layout_marginTop="@dimen/button_top_margin"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:id="@+id/activity_schedule_time_button"
                    android:text="Meeting Time"
                    app:strokeColor="#000000"
                    android:textColor="#000000"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="4dp"
                    app:rippleColor="@android:color/transparent"
                    app:strokeWidth="1dp"
                    style="?android:attr/borderlessButtonStyle"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activity_schedule_timeremain_textview"
                android:layout_below="@id/activity_schedule_datetime_button_linearlayout"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="10dp"
                android:text="Meeting starts in 0 days and 0 hours. " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_schedule_actions_textview"
                android:layout_marginTop="@dimen/textview_top_margin"
                android:layout_marginStart="@dimen/textview_left_margin"
                android:layout_marginRight="@dimen/textview_right_margin"
                android:text="Choose actions"
                android:layout_below="@id/activity_schedule_timeremain_textview" />

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activity_schedule_actions_chipgroup"
                android:layout_below="@id/activity_schedule_actions_textview"
                android:layout_marginTop="16dp"
                android:layout_marginStart="@dimen/chipgroup_left_margin"
                android:layout_marginEnd="@dimen/chipgroup_right_margin">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_schedule_calendar_chip"
                    android:text="Save to calendar"
                    android:checkable="true"
                    android:checked="true"
                    app:chipStrokeWidth="@dimen/chip_stroke_width"
                    app:chipStrokeColor="@color/colorBlack"
                    app:chipBackgroundColor="@color/grey"
                    app:checkedIconEnabled="true"
                    app:checkedIconVisible="true"
                    style="@style/Widget.MaterialComponents.Chip.Choice" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_schedule_email_chip"
                    android:text="Send via e-mail"
                    android:checkable="true"
                    android:checked="true"
                    app:chipStrokeWidth="@dimen/chip_stroke_width"
                    app:chipStrokeColor="@color/colorBlack"
                    app:chipBackgroundColor="@color/grey"
                    app:checkedIconEnabled="true"
                    app:checkedIconVisible="true"
                    style="@style/Widget.MaterialComponents.Chip.Choice" />

            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_schedule_email_textview"
                android:layout_marginTop="18dp"
                android:layout_marginStart="@dimen/textview_left_margin"
                android:layout_marginRight="@dimen/textview_right_margin"
                android:text="Choose email client"
                android:layout_below="@id/activity_schedule_actions_chipgroup" />

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activity_schedule_email_chipgroup"
                android:layout_below="@id/activity_schedule_email_textview"
                android:layout_marginTop="16dp"
                android:layout_marginStart="@dimen/chipgroup_left_margin"
                android:layout_marginEnd="@dimen/chipgroup_right_margin">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_schedule_gmail_chip"
                    android:text="Send via Gmail"
                    app:chipIcon="@drawable/ic_gmail"
                    app:iconStartPadding="6dp"
                    app:chipIconSize="20dp"
                    app:chipIconEnabled="true"
                    app:chipIconVisible="true"
                    app:chipStrokeWidth="@dimen/chip_stroke_width"
                    app:chipStrokeColor="@color/colorBlack"
                    app:chipBackgroundColor="@color/grey"
                    app:checkedIconEnabled="true"
                    app:checkedIconVisible="true" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_schedule_outlook_chip"
                    android:text="Send via Outlook"
                    app:chipIcon="@drawable/ic_outlook"
                    app:iconStartPadding="6dp"
                    app:chipIconSize="20dp"
                    app:chipIconEnabled="true"
                    app:chipIconVisible="true"
                    app:chipStrokeWidth="@dimen/chip_stroke_width"
                    app:chipStrokeColor="@color/colorBlack"
                    app:chipBackgroundColor="@color/grey"
                    app:checkedIconEnabled="true"
                    app:checkedIconVisible="true" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_schedule_chrome_chip"
                    android:text="Send via Chrome"
                    app:chipIcon="@drawable/ic_chrome"
                    app:iconStartPadding="6dp"
                    app:chipIconSize="20dp"
                    app:chipIconEnabled="true"
                    app:chipIconVisible="true"
                    app:chipStrokeWidth="@dimen/chip_stroke_width"
                    app:chipStrokeColor="@color/colorBlack"
                    app:chipBackgroundColor="@color/grey"
                    app:checkedIconEnabled="true"
                    app:checkedIconVisible="true" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_schedule_browser_chip"
                    android:text="Send via browser"
                    app:chipIcon="@drawable/ic_android"
                    app:iconStartPadding="6dp"
                    app:chipIconSize="20dp"
                    app:chipIconEnabled="true"
                    app:chipIconVisible="true"
                    app:chipStrokeWidth="@dimen/chip_stroke_width"
                    app:chipStrokeColor="@color/colorBlack"
                    app:chipBackgroundColor="@color/grey"
                    app:checkedIconEnabled="true"
                    app:checkedIconVisible="true" />

            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_schedule_qrcode_textview"
                android:layout_marginTop="18dp"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:text="Generate Meeting QR Code"
                android:layout_below="@id/activity_schedule_email_chipgroup" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_schedule_qrcode_textview"
                android:layout_marginStart="@dimen/layout_left_margin"
                android:layout_marginEnd="@dimen/layout_right_margin"
                android:layout_marginTop="26dp"
                android:id="@+id/activity_schedule_qrcode_textinputlayout"
                app:errorEnabled="true"
                app:hintEnabled="true"
                app:helperTextEnabled="true"
                app:helperText="Attendee can scan meeting QR code to add meeting"
                android:hint="Generate Meeting QR Code? ">

                <AutoCompleteTextView
                    android:id="@+id/activity_schedule_qrcode_dropdownmenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/button_left_margin"
                android:layout_marginEnd="@dimen/button_right_margin"
                android:layout_marginTop="@dimen/button_top_margin"
                android:layout_marginBottom="30dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:id="@+id/activity_schedule_done_button"
                android:layout_below="@id/activity_schedule_qrcode_textinputlayout"
                android:text="Done"
                android:textAllCaps="true"
                app:strokeColor="#000000"
                android:textColor="#000000"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="4dp"
                app:rippleColor="@android:color/transparent"
                app:strokeWidth="1dp"
                style="?android:attr/borderlessButtonStyle" />

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meeting Details"
                android:textSize="26sp"
                android:textColor="@color/colorBlack"
                android:id="@+id/activity_detail_title_textview"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="36dp"
                android:layout_centerHorizontal="true"/>

            <!-- Meeting Topic -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_detail_meetingtopictitle_textview"
                android:text="Meeting Topic"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/activity_detail_title_textview" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/activity_detail_meetingtopic_card"
                android:layout_below="@id/activity_detail_meetingtopictitle_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/transparent"
                android:alpha="1"
                app:cardCornerRadius="9dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/colorBlack"
                app:cardElevation="0dp"
                android:clickable="false"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Title, secondary and supporting text -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/activity_detail_meetingtopic_textview"
                            android:text="Today's meeting is about discussing A, B and C. It's a very important meeting so everyone please attend on time. "
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="@color/colorBlack"
                            />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Meeting Notes -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_detail_meetingnotestitle_textview"
                android:text="Meeting Notes"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/activity_detail_meetingtopic_card" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/activity_detail_meetingnotes_card"
                android:layout_below="@id/activity_detail_meetingnotestitle_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/transparent"
                android:alpha="1"
                app:cardCornerRadius="9dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/colorBlack"
                app:cardElevation="0dp"
                android:clickable="false"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Title, secondary and supporting text -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/activity_detail_meetingnotes_textview"
                            android:text="Today's meeting is about discussing A, B and C. It's a very important meeting so everyone please attend on time. "
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="@color/colorBlack"
                            />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Meeting DateTime -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_detail_meetingdatetimetitle_textview"
                android:text="Meeting Date &amp; Time"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/activity_detail_meetingnotes_card" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/activity_detail_meetingdatetime_card"
                android:layout_below="@id/activity_detail_meetingdatetimetitle_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/transparent"
                android:alpha="1"
                app:cardCornerRadius="9dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/colorBlack"
                app:cardElevation="0dp"
                android:clickable="false"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Title, secondary and supporting text -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/activity_detail_meetingdatetime_textview"
                            android:text="Today's meeting is about discussing A, B and C. It's a very important meeting so everyone please attend on time. "
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="@color/colorBlack"
                            />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Meeting Attendee -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_detail_meetingattendeetitle_textview"
                android:text="Meeting Attendees"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/activity_detail_meetingdatetime_card" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/activity_detail_meetingattendee_card"
                android:layout_below="@id/activity_detail_meetingattendeetitle_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/transparent"
                android:alpha="1"
                app:cardCornerRadius="9dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/colorBlack"
                app:cardElevation="0dp"
                android:clickable="false"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Title, secondary and supporting text -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/activity_detail_meetingattendee_textview"
                            android:text="Today's meeting is about discussing A, B and C. It's a very important meeting so everyone please attend on time. "
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="@color/colorBlack"
                            />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/activity_detail_control_button_linearlayout"
                android:layout_below="@id/activity_detail_meetingattendee_card" >

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/button_left_margin"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="@dimen/button_top_margin"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:id="@+id/activity_detail_start_button"
                    android:text="Start Meeting"
                    app:strokeColor="#000000"
                    android:textColor="#000000"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="4dp"
                    app:rippleColor="@android:color/transparent"
                    app:strokeWidth="1dp"
                    style="?android:attr/borderlessButtonStyle"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="@dimen/button_right_margin"
                    android:layout_marginTop="@dimen/button_top_margin"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:id="@+id/activity_detail_delete_button"
                    android:text="Delete Meeting"
                    app:strokeColor="#000000"
                    android:textColor="#000000"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="4dp"
                    app:rippleColor="@android:color/transparent"
                    app:strokeWidth="1dp"
                    style="?android:attr/borderlessButtonStyle"
                    />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/button_left_margin"
                android:layout_marginRight="@dimen/button_right_margin"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="36dp"
                android:id="@+id/activity_detail_visualizationwait_button"
                android:layout_below="@id/activity_detail_control_button_linearlayout"
                android:text="Participation Analysis"
                app:strokeColor="#000000"
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="4dp"
                app:rippleColor="@android:color/transparent"
                app:strokeWidth="1dp"
                app:iconGravity="textStart"
                app:icon="@drawable/wait"
                app:iconTint="@null"
                app:iconPadding="3dp"
                app:iconSize="22dp"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/button_left_margin"
                android:layout_marginRight="@dimen/button_right_margin"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="36dp"
                android:id="@+id/activity_detail_visualizationready_button"
                android:layout_below="@id/activity_detail_control_button_linearlayout"
                android:text="Participation Analysis"
                app:strokeColor="#000000"
                android:textColor="#000000"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="4dp"
                app:rippleColor="@android:color/transparent"
                app:strokeWidth="1dp"
                app:iconGravity="textStart"
                app:icon="@drawable/ready"
                app:iconTint="@null"
                app:iconPadding="3dp"
                app:iconSize="27dp"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                />
            
        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>